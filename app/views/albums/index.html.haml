%h1
  Albums

%table.table.table-hover
  %thead
    %tr
      %th
        Title
      %th
        Artist
      %th
        Label
      %th
        Year
      %th{:colspan => "3"}
  %tbody
    - @albums.each do |album|
      %tr
        %td
          = album.title
        %td
          = album.artist.name
        %td
          = album.label.name
        %td
          = album.year
        %td
          = link_to 'Show', album_path(album)
        %td
          = link_to 'Edit', edit_album_path(album)
        %td
          = link_to 'Destroy', album_path(album),
              method: :delete,
              data: { confirm: 'Are you sure?' }

= form_tag new_album_path, method: :get do
  = select_tag :format_id, options_from_collection_for_select(Format.all, :id, :name)
  = submit_tag "New Album", name: nil