= form_for(@format) do |f|
  - if @format.errors.any?
    #error_explanation
      %h2
        = pluralize(@format.errors.count, "error")
        prohibited this format from being saved:
      %ul
        - @format.errors.full_messages.each do |message|
          %li= message

  .form-inputs
    = f.label :name
    = f.text_field :name

  = f.fields_for :fields do |builder|
    =render 'field_fields', f: builder
  = link_to_add_fields "Add Field", f, :fields
  .form-actions
    = f.submit 'Submit'
