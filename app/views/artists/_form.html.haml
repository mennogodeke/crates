= simple_form_for @artist do |f|
  - if @artist.errors.any?
    #error_explanation
      %h2
        = pluralize(@artist.errors.count, "error")
        prohibited
        this artist from being saved:
      %ul
        - @artist.errors.full_messages.each do |msg|
          %li= msg

  %p
    = f.input :name
  %p
    = f.input :description, :as => :text
  %p
    = f.label :avatar
    = f.file_field :avatar
  %p
    = f.input :link
  %p
    = f.button :submit